{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "strict": true,
    "target": "ESNext",
    "module": "es6",
    "moduleResolution": "Node",
    "outDir": "out",
    "inlineSourceMap": true,
    "downlevelIteration": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts"],
  "exclude": ["node_modules", "./src/**/*.spec.ts", ".vscode", "coverage"]
}
