{
  "compilerOptions": {
    "baseUrl": "./src",
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "lib": ["DOM", "ESNext", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "out",
    "paths": {
      "*": ["*"]
    },
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "./src/**/*.spec.ts", ".vscode", "coverage"],
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
  ],
  "ts-node": {
    "esm": true
  }
}
