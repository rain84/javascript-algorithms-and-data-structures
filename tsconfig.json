{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "strict": true,
    "target": "ESNext",
    "module": "es6",
    "moduleResolution": "Node",
    "outDir": "out",
    "inlineSourceMap": true,
    "downlevelIteration": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
