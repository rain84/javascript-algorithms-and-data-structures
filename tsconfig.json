{
  "compilerOptions": {
    "baseUrl": "./src",
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "lib": ["ES2021", "DOM", "ESNext"],
    "module": "es6",
    "moduleResolution": "Node",
    "outDir": "out",
    "paths": {
      "*": ["*"]
    },
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "./src/**/*.spec.ts", ".vscode", "coverage"],
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/interview-tasks/reactive.ts",
    "src/reactivity/compute.js"
  ],
  "ts-node": {
    "esm": true
  }
}
